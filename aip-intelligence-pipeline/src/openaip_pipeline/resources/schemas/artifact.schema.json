{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "AipArtifactV11",
  "type": "object",
  "required": [
    "schema_version",
    "generated_at",
    "stage",
    "aip_id",
    "uploaded_file_id",
    "document",
    "projects"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^aip_artifact_v1\\.[0-9]+\\.[0-9]+$"
    },
    "generated_at": { "type": "string" },
    "stage": {
      "type": "string",
      "enum": ["extract", "validate", "summarize", "categorize"]
    },
    "aip_id": { "type": "string" },
    "uploaded_file_id": { "type": ["string", "null"] },
    "document": { "type": "object" },
    "projects": { "type": "array" },
    "summary": { "type": ["object", "null"] },
    "warnings": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["code", "message", "source_refs"],
        "properties": {
          "code": { "type": "string" },
          "message": { "type": "string" },
          "details": { "type": ["object", "null"] },
          "source_refs": { "type": "array" }
        },
        "additionalProperties": true
      }
    },
    "quality": {
      "type": ["object", "null"],
      "properties": {
        "score": { "type": "integer", "minimum": 0, "maximum": 100 },
        "signals": { "type": "object" }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
