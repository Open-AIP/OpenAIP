{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "SummarizeArtifact",
  "type": "object",
  "required": ["stage", "summary"],
  "properties": {
    "stage": { "const": "summarize" },
    "summary": {
      "type": "object",
      "required": ["text", "source_refs"],
      "properties": {
        "text": { "type": "string", "minLength": 1 },
        "evidence_project_keys": {
          "type": ["array", "null"],
          "items": { "type": "string" }
        },
        "source_refs": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["page", "kind"],
            "properties": {
              "page": { "type": "integer" },
              "kind": {
                "type": "string",
                "enum": ["table_row", "text_block", "header", "footer", "unknown"]
              },
              "table_index": { "type": ["integer", "null"] },
              "row_index": { "type": ["integer", "null"] },
              "evidence_text": { "type": ["string", "null"] },
              "anchor_hash": { "type": ["string", "null"] },
              "row_signature": { "type": ["string", "null"] }
            }
          }
        }
      }
    }
  },
  "additionalProperties": true
}
