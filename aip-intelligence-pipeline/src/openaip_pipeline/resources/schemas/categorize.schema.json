{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "CategorizeArtifact",
  "type": "object",
  "required": ["stage", "projects"],
  "properties": {
    "stage": { "const": "categorize" },
    "projects": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["classification"],
        "properties": {
          "classification": {
            "type": "object",
            "required": ["sector_code", "category"],
            "properties": {
              "sector_code": {
                "type": "string",
                "enum": ["1000", "3000", "8000", "9000", "unknown"]
              },
              "category": {
                "type": "string",
                "enum": ["health", "infrastructure", "other"]
              }
            }
          }
        }
      }
    }
  },
  "additionalProperties": true
}

